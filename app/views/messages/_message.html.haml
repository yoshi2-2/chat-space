.chat-content__nickname
  .nickname
    = message.user.name
    %span{class: "date"}
      = message.created_at.strftime('%Y年%m月%d日 %H:%M:%S')
  .chat-text
    .lower-meesage
      - if message.body.present?
        %p.lower-message__content
          = message.body
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
